# ==========================================
# ENVIRONMENT VARIABLES - EXAMPLE
# ==========================================
# Copy this file to .env and fill in your values

# ==========================================
# ENVIRONMENT
# ==========================================
NODE_ENV=development
PORT=3000

# ==========================================
# DATABASE (PostgreSQL)
# ==========================================
DATABASE_URL=postgresql://sgg_user:sgg_password@localhost:5432/sgg_dev?schema=public
DATABASE_SHADOW_URL=postgresql://sgg_user:sgg_password@localhost:5432/sgg_shadow?schema=public
DATABASE_POOL_SIZE=10
DATABASE_CONNECTION_TIMEOUT=10000
DATABASE_QUERY_TIMEOUT=60000
DATABASE_LOG_QUERIES=true

# ==========================================
# REDIS (Cache)
# ==========================================
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0
REDIS_KEY_PREFIX=sgg:

# ==========================================
# JWT (Authentication)
# ==========================================
JWT_ACCESS_SECRET=your-super-secret-access-key-change-this-in-production-min-32-chars
JWT_REFRESH_SECRET=your-super-secret-refresh-key-change-this-in-production-min-32-chars
JWT_ACCESS_EXPIRATION=15m
JWT_REFRESH_EXPIRATION=7d

# ==========================================
# ENCRYPTION
# ==========================================
ENCRYPTION_SECRET=your-32-character-secret-key-here-change-in-production

# ==========================================
# EMAIL (SMTP)
# ==========================================
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_SECURE=false
EMAIL_USER=noreply@sgg.com
EMAIL_PASSWORD=your-email-password
EMAIL_FROM=Sistema SGG <noreply@sgg.com>

# ==========================================
# STORAGE (Files)
# ==========================================
STORAGE_PROVIDER=local
STORAGE_LOCAL_PATH=./uploads
STORAGE_MAX_FILE_SIZE=10485760
STORAGE_ALLOWED_MIME_TYPES=image/jpeg,image/png,image/webp,application/pdf

# AWS S3 (only if STORAGE_PROVIDER=s3)
AWS_S3_REGION=us-east-1
AWS_S3_BUCKET_NAME=sgg-production-bucket
AWS_S3_ACCESS_KEY_ID=your-access-key
AWS_S3_SECRET_ACCESS_KEY=your-secret-key

# ==========================================
# LOGGING
# ==========================================
LOG_LEVEL=info
LOG_DIR=./logs
LOG_MAX_FILES=30d
LOG_MAX_SIZE=20m

# ==========================================
# RATE LIMITING
# ==========================================
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
RATE_LIMIT_AUTH_MAX=1000

# ==========================================
# CORS
# ==========================================
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:5173

# ==========================================
# MONITORING
# ==========================================
PROMETHEUS_PORT=9090
GRAFANA_PORT=3001

# ==========================================
# OTHER
# ==========================================
BASE_URL=http://localhost:3000
FRONTEND_URL=http://localhost:5173
