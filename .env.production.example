# ==========================================
# PRODUCTION ENVIRONMENT - EXAMPLE
# ==========================================
# Copy this to .env.production and fill with real values
# NEVER commit .env.production to version control!

NODE_ENV=production
PORT=3000

# ==========================================
# DATABASE
# ==========================================
DB_USER=sgg_prod_user
DB_PASSWORD=<CHANGE_ME_STRONG_PASSWORD>
DB_NAME=sgg_production
DATABASE_URL=postgresql://${DB_USER}:${DB_PASSWORD}@postgres:5432/${DB_NAME}?schema=public
DATABASE_POOL_SIZE=20
DATABASE_CONNECTION_TIMEOUT=10000
DATABASE_QUERY_TIMEOUT=60000
DATABASE_LOG_QUERIES=false

# ==========================================
# REDIS
# ==========================================
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=<CHANGE_ME_STRONG_REDIS_PASSWORD>
REDIS_DB=0
REDIS_KEY_PREFIX=sgg:prod:

# ==========================================
# JWT SECRETS
# ==========================================
# Generate with: openssl rand -base64 48
JWT_ACCESS_SECRET=<GENERATE_STRONG_SECRET_MIN_48_CHARS>
JWT_REFRESH_SECRET=<GENERATE_DIFFERENT_STRONG_SECRET_MIN_48_CHARS>
JWT_ACCESS_EXPIRATION=15m
JWT_REFRESH_EXPIRATION=7d

# ==========================================
# ENCRYPTION
# ==========================================
# Generate with: openssl rand -base64 32
ENCRYPTION_SECRET=<GENERATE_STRONG_ENCRYPTION_KEY_32_CHARS>

# ==========================================
# EMAIL (SMTP)
# ==========================================
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_SECURE=false
EMAIL_USER=noreply@sgg.com
EMAIL_PASSWORD=<SMTP_APP_PASSWORD>
EMAIL_FROM=Sistema SGG <noreply@sgg.com>

# ==========================================
# STORAGE (AWS S3)
# ==========================================
STORAGE_PROVIDER=s3
STORAGE_MAX_FILE_SIZE=10485760
STORAGE_ALLOWED_MIME_TYPES=image/jpeg,image/png,image/webp,application/pdf

AWS_S3_REGION=us-east-1
AWS_S3_BUCKET_NAME=sgg-production-uploads
AWS_S3_ACCESS_KEY_ID=<AWS_ACCESS_KEY>
AWS_S3_SECRET_ACCESS_KEY=<AWS_SECRET_KEY>
AWS_S3_BACKUP_BUCKET=sgg-production-backups

# ==========================================
# LOGGING
# ==========================================
LOG_LEVEL=info
LOG_DIR=./logs
LOG_MAX_FILES=30d
LOG_MAX_SIZE=20m

# ==========================================
# RATE LIMITING
# ==========================================
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
RATE_LIMIT_AUTH_MAX=1000

# ==========================================
# CORS
# ==========================================
ALLOWED_ORIGINS=https://sgg.com,https://www.sgg.com

# ==========================================
# BASE URLS
# ==========================================
BASE_URL=https://sgg.com
FRONTEND_URL=https://sgg.com

# ==========================================
# MONITORING
# ==========================================
GRAFANA_ADMIN_USER=admin
GRAFANA_ADMIN_PASSWORD=<CHANGE_ME_STRONG_PASSWORD>

# Alerting
ALERT_EMAIL_USER=alerts@sgg.com
ALERT_EMAIL_PASSWORD=<SMTP_APP_PASSWORD>
WEBHOOK_TOKEN=<GENERATE_RANDOM_TOKEN>

# ==========================================
# SECURITY
# ==========================================
# Generate with: openssl rand -hex 32
SESSION_SECRET=<GENERATE_SESSION_SECRET>

# ==========================================
# FEATURE FLAGS
# ==========================================
ENABLE_SWAGGER=false
ENABLE_METRICS=true
ENABLE_REQUEST_LOGGING=true
