# ==========================================
# DESARROLLO LOCAL - DOCKER - DATOS DE PRUEBA
# ==========================================
NODE_ENV=development
PORT=3000

# ==========================================
# BASE DE DATOS (PostgreSQL)
# ==========================================
DATABASE_URL=postgresql://sgg_user:sgg_password@postgres:5432/sgg_dev?schema=public
DATABASE_POOL_SIZE=5
DATABASE_LOG_QUERIES=true

# ==========================================
# REDIS (Cache)
# ==========================================
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0
REDIS_KEY_PREFIX=sgg:dev:

# ==========================================
# JWT (Autenticaci√≥n) - SOLO DESARROLLO
# ==========================================
JWT_ACCESS_SECRET=dev-secret-not-for-production-32chars
JWT_REFRESH_SECRET=dev-refresh-secret-not-for-prod-32chars
JWT_ACCESS_EXPIRATION=24h
JWT_REFRESH_EXPIRATION=30d

# ==========================================
# ENCRYPTION - SOLO DESARROLLO
# ==========================================
ENCRYPTION_SECRET=dev-encryption-secret-32-chars

# ==========================================
# EMAIL (SMTP) - Deshabilitado en desarrollo
# ==========================================
EMAIL_HOST=localhost
EMAIL_PORT=1025
EMAIL_SECURE=false
EMAIL_USER=
EMAIL_PASSWORD=
EMAIL_FROM=SGG Dev <dev@sgg.local>

# ==========================================
# STORAGE (Archivos)
# ==========================================
STORAGE_PROVIDER=local
STORAGE_LOCAL_PATH=./uploads
STORAGE_MAX_FILE_SIZE=10485760
STORAGE_ALLOWED_MIME_TYPES=image/jpeg,image/png,image/webp,application/pdf

# ==========================================
# LOGGING
# ==========================================
LOG_LEVEL=debug
LOG_DIR=./logs
LOG_MAX_FILES=7d
LOG_MAX_SIZE=10m

# ==========================================
# RATE LIMITING (Relajado para desarrollo)
# ==========================================
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=1000
RATE_LIMIT_AUTH_MAX=1000

# ==========================================
# CORS
# ==========================================
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:5173,http://localhost:5174,http://localhost:4200

# ==========================================
# URLs BASE
# ==========================================
BASE_URL=http://localhost:3000
FRONTEND_URL=http://localhost:5173

# ==========================================
# MONITOREO
# ==========================================
PROMETHEUS_PORT=9090
GRAFANA_PORT=3001

# ==========================================
# OTROS
# ==========================================
ENABLE_SWAGGER=true
ENABLE_METRICS=true
