# ==========================================
# DEVELOPMENT ENVIRONMENT
# ==========================================
NODE_ENV=development
PORT=3000

# Database (matches docker-compose.yml)
DATABASE_URL=postgresql://sgg_user:sgg_password@postgres:5432/sgg_dev?schema=public
DATABASE_POOL_SIZE=5
DATABASE_LOG_QUERIES=true

# Redis
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0
REDIS_KEY_PREFIX=sgg:dev:

# JWT (Development - DO NOT USE IN PRODUCTION)
JWT_ACCESS_SECRET=dev-secret-not-for-production-32chars
JWT_REFRESH_SECRET=dev-refresh-secret-not-for-prod-32chars
JWT_ACCESS_EXPIRATION=24h
JWT_REFRESH_EXPIRATION=30d

# Encryption (Development - DO NOT USE IN PRODUCTION)
ENCRYPTION_SECRET=dev-encryption-secret-32-chars

# Logging
LOG_LEVEL=debug
LOG_DIR=./logs
LOG_MAX_FILES=7d
LOG_MAX_SIZE=10m

# Storage
STORAGE_PROVIDER=local
STORAGE_LOCAL_PATH=./uploads
STORAGE_MAX_FILE_SIZE=10485760

# CORS
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:5173,http://localhost:5174

# Rate Limiting (relaxed for development)
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=1000

# Base URLs
BASE_URL=http://localhost:3000
FRONTEND_URL=http://localhost:5173

# Email (development - use MailHog or similar)
EMAIL_HOST=localhost
EMAIL_PORT=1025
EMAIL_SECURE=false
EMAIL_USER=
EMAIL_PASSWORD=
EMAIL_FROM=SGG Dev <dev@sgg.local>
